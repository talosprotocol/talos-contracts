{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talos.security/schemas/setup/v1/agent_register_request.schema.json",
  "title": "Agent Register Request",
  "type": "object",
  "required": [
    "pairing_token",
    "hostname",
    "version"
  ],
  "properties": {
    "pairing_token": {
      "type": "string",
      "description": "Short-lived pairing token generated by the Dashboard"
    },
    "hostname": {
      "type": "string",
      "description": "Hostname of the machine running the helper"
    },
    "version": {
      "type": "string",
      "description": "Version of the setup-helper"
    },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Optional metadata labels"
    }
  }
}
