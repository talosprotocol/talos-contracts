{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talos.network/schemas/a2a/jsonrpc_request.schema.json",
  "type": "object",
  "required": ["jsonrpc", "method", "id"],
  "properties": {
    "jsonrpc": {
      "const": "2.0"
    },
    "method": {
      "type": "string",
      "pattern": "^tasks\\.(send|sendSubscribe|get|cancel|resubscribe)$"
    },
    "id": {
      "type": ["string", "integer"]
    },
    "params": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
