{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/ai_gateway/model_group.schema.json",
  "title": "Model Group",
  "description": "Logical grouping of model deployments for routing.",
  "type": "object",
  "required": ["id", "name", "deployments"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this model group."
    },
    "name": {
      "type": "string",
      "description": "Human-readable name (e.g., 'gpt-4-turbo')."
    },
    "deployments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["upstream_id", "model_name"],
        "properties": {
          "upstream_id": { "type": "string" },
          "model_name": { "type": "string" },
          "weight": { "type": "integer", "minimum": 0, "default": 100 }
        }
      },
      "minItems": 1,
      "description": "List of upstream deployments with routing weights."
    },
    "fallback_groups": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Ordered list of fallback model group IDs."
    }
  }
}
