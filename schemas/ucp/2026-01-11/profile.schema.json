{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talos.network/schemas/ucp/2026-01-11/profile.schema.json",
  "title": "UCP Merchant Profile",
  "description": "Schema for /.well-known/ucp merchant profile",
  "type": "object",
  "required": ["version", "services", "signing_keys"],
  "properties": {
    "version": {
      "type": "string",
      "const": "2026-01-11"
    },
    "services": {
      "type": "object",
      "properties": {
        "dev.ucp.shopping": {
          "type": "object",
          "required": ["rest", "id", "type"],
          "properties": {
            "id": { "type": "string" },
            "type": { "type": "string", "const": "dev.ucp.shopping" },
            "rest": {
              "type": "object",
              "required": ["endpoint"],
              "properties": {
                "endpoint": { "type": "string", "format": "uri" }
              }
            }
          }
        }
      }
    },
    "signing_keys": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "algorithm", "public_key"],
        "properties": {
           "id": { "type": "string" },
           "algorithm": { "type": "string", "enum": ["ES256", "RS256"] },
           "public_key": { "type": "string" }
        }
      }
    }
  }
}
