{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Talos Secret Envelope v1",
  "type": "object",
  "required": [
    "kek_id",
    "nonce_b64u",
    "ciphertext_b64u",
    "tag_b64u"
  ],
  "properties": {
    "kek_id": {
      "type": "string",
      "description": "Identifier for the Key Encryption Key"
    },
    "nonce_b64u": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "AES-GCM Nonce (96-bit), Base64URL encoded (no padding)"
    },
    "ciphertext_b64u": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Encrypted secret value, Base64URL encoded (no padding)"
    },
    "tag_b64u": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "AES-GCM Auth Tag (128-bit), Base64URL encoded (no padding)"
    },
    "aad_b64u": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Additional Authenticated Data, Base64URL encoded (no padding)"
    }
  },
  "additionalProperties": false
}
