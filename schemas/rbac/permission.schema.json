{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/rbac/permission.schema.json",
  "title": "RBAC Permission",
  "description": "Atomic permission for RBAC.",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": { "type": "string" },
    "name": {
      "type": "string",
      "pattern": "^[a-z]+\\.[a-z]+$",
      "examples": ["mcp.read", "llm.admin", "keys.write", "audit.read"]
    },
    "description": { "type": "string" }
  }
}
