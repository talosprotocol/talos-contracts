{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/rbac/secret_ref.schema.json",
  "title": "Secret Reference",
  "description": "Metadata for an encrypted secret, never including the value.",
  "type": "object",
  "required": ["id", "name", "key_id", "nonce"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "key_id": { "type": "string", "description": "KEK version identifier" },
    "nonce": { "type": "string", "description": "Initialization vector" },
    "created_at": { "type": "string", "format": "date-time" },
    "rotated_at": { "type": ["string", "null"], "format": "date-time" }
  }
}
