{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/rbac/binding.schema.json",
  "title": "RBAC Binding",
  "description": "Binds a principal to a role at a scope.",
  "type": "object",
  "required": ["id", "principal_id", "role_id", "scope"],
  "properties": {
    "id": { "type": "string" },
    "principal_id": {
      "type": "string",
      "description": "ID of the user or service account."
    },
    "role_id": { "type": "string" },
    "scope": {
      "$ref": "#/definitions/Scope"
    }
  },
  "definitions": {
    "Scope": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["platform", "org", "team"]
        },
        "org_id": { "type": "string" },
        "team_id": { "type": "string" }
      }
    }
  }
}
