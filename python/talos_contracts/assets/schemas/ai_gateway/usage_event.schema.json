{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/ai_gateway/usage_event.schema.json",
  "title": "Usage Event",
  "description": "Usage event for tracking consumption.",
  "type": "object",
  "required": ["event_id", "timestamp", "key_id", "team_id"],
  "properties": {
    "event_id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "key_id": { "type": "string" },
    "team_id": { "type": "string" },
    "org_id": { "type": "string" },
    "surface": { "type": "string", "enum": ["llm", "mcp"] },
    "model_group_id": { "type": "string" },
    "mcp_server_id": { "type": "string" },
    "input_tokens": { "type": "integer", "minimum": 0 },
    "output_tokens": { "type": "integer", "minimum": 0 },
    "cost_usd": { "type": "number", "minimum": 0 },
    "latency_ms": { "type": "integer", "minimum": 0 },
    "status": { "type": "string", "enum": ["success", "denied", "error"] }
  }
}
