{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talos.network/schemas/a2a/jsonrpc_response.schema.json",
  "type": "object",
  "required": ["jsonrpc", "id"],
  "properties": {
    "jsonrpc": {
      "const": "2.0"
    },
    "id": {
      "type": ["string", "integer", "null"]
    },
    "result": {},
    "error": {
      "$ref": "jsonrpc_error.schema.json"
    }
  },
  "oneOf": [
    { "required": ["result"] },
    { "required": ["error"] }
  ],
  "additionalProperties": false
}
