{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talos.network/schemas/a2a/message.schema.json",
  "type": "object",
  "required": ["role", "content"],
  "properties": {
    "role": {
      "type": "string",
      "enum": ["user", "assistant", "system"]
    },
    "content": {
      "type": "array",
      "items": {
        "$ref": "part.schema.json"
      }
    },
    "name": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
