{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://talosprotocol.org/schemas/mcp_payload.json",
    "title": "Talos MCP Signed Payload",
    "description": "Schema for MCP request/response signing",
    "type": "object",
    "required": [
        "request",
        "session_id",
        "correlation_id",
        "tool",
        "action",
        "timestamp"
    ],
    "properties": {
        "request": {
            "type": "object",
            "description": "The MCP request object (canonical JSON)"
        },
        "session_id": {
            "type": "string",
            "description": "Session identifier"
        },
        "correlation_id": {
            "type": "string",
            "description": "Request correlation ID"
        },
        "tool": {
            "type": "string",
            "description": "Tool name being invoked"
        },
        "action": {
            "type": "string",
            "description": "Action being performed"
        },
        "timestamp": {
            "type": "integer",
            "description": "Unix epoch timestamp"
        }
    },
    "additionalProperties": false
}