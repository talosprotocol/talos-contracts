{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talosprotocol.com/schemas/catalog/provider_catalog.schema.json",
  "title": "Provider Catalog",
  "description": "Container schema for provider templates catalog",
  "type": "object",
  "required": ["version", "templates"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the catalog"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "templates": {
      "type": "array",
      "items": {
        "$ref": "provider_template.schema.json"
      },
      "description": "Array of provider templates"
    }
  },
  "additionalProperties": false
}
