{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://talosprotocol.com/schemas/rbac/role.schema.json",
  "title": "RBAC Role",
  "description": "Named set of permissions.",
  "type": "object",
  "required": ["id", "name", "permissions"],
  "properties": {
    "id": { "type": "string" },
    "name": {
      "type": "string",
      "examples": ["PlatformAdmin", "TeamViewer", "KeyManager"]
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of permission names."
    },
    "built_in": {
      "type": "boolean",
      "default": false,
      "description": "True if this is a system-defined role."
    }
  }
}
